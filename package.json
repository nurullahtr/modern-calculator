{
  "name": "modern-calculator",
  "version": "1.0.0",
  "description": "Modern Calculator with Currency Conversion",
  "author": "Modern Calculator Team",
  "main": "background.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "npm run clean && vite build && electron-builder --win portable",
    "clean": "rimraf dist dist_electron .electron-vue/build",
    "rebuild": "npm run clean && npm run electron:build"
  },
  "dependencies": {
    "@mdi/font": "^7.2.96",
    "axios": "^1.4.0",
    "electron-store": "^8.1.0",
    "emailjs-com": "^3.2.0",
    "tailwindcss": "^3.3.2",
    "vue": "^3.3.4",
    "vuetify": "^3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "electron": "^24.3.0",
    "electron-builder": "^24.3.0",
    "postcss": "^8.4.24",
    "rimraf": "^6.0.1",
    "vite": "^4.3.9",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.modern-calculator.app",
    "productName": "Modern Calculator",
    "directories": {
      "output": "dist_electron",
      "buildResources": "build"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Modern Calculator",
      "installerIcon": "build/icon.png",
      "uninstallerIcon": "build/icon.png",
      "installerHeaderIcon": "build/icon.png"
    },
    "files": [
      "dist/**/*",
      "background.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      }
    ],
    "asar": true
  }
}
